{
  "name": "power-viewer",
  "version": "1.0.4",
  "description": "A web app for monitoring your stream across streaming platforms",
  "main": "index.js",
  "homepage": "https://kasimahmic.github.io/PowerViewer",
  "repository": "https://github.com/KasimAhmic/PowerViewer.git",
  "author": "Kasim Ahmic <kasim.ahmic@gmail.com> (https://kasimahmic.com/)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "pre-commit": "lint-staged",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false --coverage",
    "predeploy": "yarn run build",
    "deploy": "gh-pages -d build -u \"github-actions-bot <support+actions@github.com>\"",
    "release": "standard-version",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.6.2",
    "@mui/material": "^5.6.4",
    "@reduxjs/toolkit": "^1.8.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^14.1.1",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@types/react-redux": "^7.1.24",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-redux": "^8.0.1",
    "react-scripts": "5.0.1",
    "redux-persist": "^6.0.0",
    "tss-react": "^3.6.2",
    "typescript": "^4.6.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@testing-library/react-hooks": "^8.0.0",
    "@types/uuid": "^8.3.4",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "standard-version": "^9.3.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "printWidth": 110,
    "singleQuote": true,
    "semi": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "always",
        [
          "sentence-case"
        ]
      ]
    }
  },
  "lint-staged": {
    "src/**/*.+(js,css,md,ts,tsx)": "prettier --write"
  }
}
